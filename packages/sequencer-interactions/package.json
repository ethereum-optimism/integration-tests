{
  "name": "@eth-optimism/sequencer-interactions",
  "version": "0.0.1",
  "description": "[Optimism] Optimistic Rollup Sequencer Interaction Integration Tests",
  "main": "build/index.js",
  "files": [
    "build/**/*.js"
  ],
  "scripts": {
    "all": "yarn clean && yarn build && && yarn test && yarn fix && yarn lint",
    "build": "yarn build:evm && yarn build:ovm && yarn build:ts",
    "build:evm": "waffle ../../waffle-config.evm.js",
    "build:ovm": "waffle ../../waffle-config.ovm.js",
    "build:ts": "mkdir -p build && tsc -p .",
    "clean": "rimraf build/ && rimraf build-ovm/",
    "lint": "yarn lint:fix && yarn lint:check",
    "lint:check": "tslint --format stylish --project .",
    "lint:fix": "prettier --config ../../prettier-config.json --write 'test/**/*.ts'",
    "test": "mocha --require ts-node/register 'test/**/*.spec.ts' --timeout 100000 --exit",
    "ci": "yarn test"
  },
  "repository": "https://github.com/ethereum-optimism/optimistic-rollup-integration-tests.git",
  "author": "Optimism",
  "license": "MIT",
  "devDependencies": {
    "@eth-optimism/dev": "^1.1.1",
    "@ethersproject/providers": "^5.0.24",
    "chai": "^4.3.3",
    "ethereum-waffle": "^3.3.0",
    "ethers": "^5.0.32",
    "mocha": "^8.3.1"
  }
}
